<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_album_item_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_text"
        android:text="0"
        android:textColor="#979797"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_toRightOf="@id/order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_item_title"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="20dp"
            android:text="这里是大标题"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/play_info_icon"
                android:id="@+id/detail_item_play_count"
                android:drawablePadding="4dp"
                android:text="14.4万"
                android:textSize="12sp"
                android:textColor="#979797"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_sound"
                android:drawablePadding="4dp"
                android:id="@+id/detail_item_duration"
                android:text="05:23"
                android:textSize="12sp"
                android:textColor="#979797"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/detail_item_update_time"
        android:text="2018-11-22"
        android:textSize="12sp"
        android:textColor="#979797"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>